#include <16F876.h>
#fuses XT, NOWDT, NOPROTECT, NOLVP
#use delay(clock = 4000000)

#include <lcd.c>
#include <kbd.c>

void main(){
   char k;
   int x;
   lcd_init();
   kbd_init();
   port_b_pullups(TRUE);

   lcd_putc("\fPRONTO...");
   while(TRUE){
      k = kbd_getc();
      x = k-48;
      if(k!=0){
         if(k=='*')
            lcd_putc('\f');
         else{
            lcd_putc(k);
            delay_ms(500);

            printf(lcd_putc, "\f Car=%c", k);
            delay_ms(500);

            printf(lcd_putc, "\f Car=%u", k); //ASCII
            delay_ms(500);

            printf(lcd_putc, "\f Car=%u", x); //Valor numerico
            delay_ms(500);

            lcd_putc("\fPRONTO...");

         }
      }
   }

}
